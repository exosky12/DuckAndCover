<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Pages.MenuPlayer"
             xmlns:components="clr-namespace:DuckAndCover.Views"
             ControlTemplate="{StaticResource BackgroundTemplate}"
             Title="Configuration des joueurs">

    <Grid RowDefinitions="Auto,*" Padding="20">
        
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,20,0,10">
            <Label Grid.Column="0" 
                   Text="Configuration des joueurs" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{AppThemeBinding Light=#222222, Dark=#DDDDDD}" 
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
            
            <Button x:Name="DarkModeButton"
                    Grid.Column="1"
                    Text="ðŸŒ™" 
                    FontAttributes="Bold"
                    CornerRadius="25"
                    Padding="12,8"
                    FontSize="20"
                    Clicked="OnDarkModeClicked"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333333}" 
                    BorderColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                    BorderWidth="2"
                    TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                    WidthRequest="55" 
                    HeightRequest="55">
                <Button.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=Black, Dark=Gray}" Opacity="0.3" Offset="2,2" Radius="4"/>
                </Button.Shadow>
            </Button>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                Spacing="30"
                HorizontalOptions="Center"
                WidthRequest="600"
                Margin="0,20,0,20">

            <Border BackgroundColor="#80000000" Padding="20" StrokeThickness="0">
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Configuration des joueurs"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                    <Label Text="Entrez les noms des joueurs qui vont participer Ã  la partie"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="#DDDDDD"/>
                </VerticalStackLayout>
            </Border>

                <Border BackgroundColor="{AppThemeBinding Light=#CCFFFFFF, Dark=#333333}" Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#666666}" StrokeThickness="1" Padding="30">
                    <VerticalStackLayout x:Name="PlayerInputsLayout" Spacing="20" Padding="10"/>
                </Border>

                <components:Button x:Name="PlayBtn"
                                   Name="Commencer la partie"
                                   Margin="10,40"
                                   Clicked="PlayClicked"
                                   HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>