<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Pages.Credits"
             xmlns:components="clr-namespace:DuckAndCover.Views"
             Title="Crédits">
    
    <ContentPage.Content>
        <Grid>
            <!-- Bouton Dark Mode en haut à droite -->
            <Button x:Name="DarkModeButton"
                    Text="🌙"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="20"
                    ZIndex="1000"
                    Clicked="OnDarkModeClicked" />
            
            <Image
                Source="bg.jpg"
                Aspect="AspectFill"
                HorizontalOptions="Start" />

            <ScrollView>
                <VerticalStackLayout Spacing="25"
                                     Padding="30"
                                     VerticalOptions="Center">

                    <Label Text="Crédits"
                           FontSize="42"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20" />

                    <BoxView HeightRequest="3"
                             WidthRequest="120"
                             Color="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                             HorizontalOptions="Center"
                             Margin="0,5" />

                    <Label Text="Développé avec passion par :"
                           FontSize="22"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                           FontAttributes="Italic"
                           HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="*"
                          RowDefinitions="Auto,Auto"
                          RowSpacing="20"
                          ColumnSpacing="0">

                        <components:Credit
                            Row="0"
                            Column="0"
                            Emoji="🎭"
                            Name="Merienne Jules" />

                        <components:Credit
                            Row="1"
                            Column="0"
                            Emoji="💡"
                            Name="Barrère Jordy" />

                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>