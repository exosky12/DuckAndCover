<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Pages.LeaderboardPage"
             Title="Classement"
             ControlTemplate="{StaticResource BackgroundTemplate}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
            <Label Text="Classement"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="#222222"
                   HorizontalOptions="Center" />
            <Label Text="DÃ©couvrez les meilleurs scores"
                   FontSize="18"
                   TextColor="#444"
                   Opacity="0.7"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="1" WidthRequest="600" HorizontalOptions="Center">
            <VerticalStackLayout x:Name="LeaderboardList"
                                 Spacing="15"
                                 Padding="10" />
        </ScrollView>

        <Button Grid.Row="2"
                Text="Retour"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                Padding="20,10"
                Margin="0,20,0,0"
                Clicked="OnBackClicked" />
    </Grid>
</ContentPage>