<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Views.Button">
    <Button Text="{Binding ButtonName}"
            Padding="20"
            WidthRequest="300"
            CornerRadius="20"
            FontSize="32"
            FontAttributes="Bold"
            TextColor="Black"
            BorderColor="Black"
            BorderWidth="2"
            HorizontalOptions="Center"
            VerticalOptions="Center">

        <Button.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="#7FDBFF"
                              Offset="0.0" />
                <GradientStop Color="#0074D9"
                              Offset="1.0" />
            </LinearGradientBrush>
        </Button.Background>

        <Button.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.3"
                    Offset="5,5"
                    Radius="10" />
        </Button.Shadow>

        <Button.Triggers>
            <Trigger TargetType="Button"
                     Property="IsPressed"
                     Value="True">
                <Setter Property="Scale"
                        Value="0.95" />
            </Trigger>
        </Button.Triggers>

    </Button>


</ContentView>