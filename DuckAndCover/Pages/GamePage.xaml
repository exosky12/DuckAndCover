<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Pages.GamePage"
             Title="Game">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label x:Name="GridInfoLabel" 
                       Text="Grille de jeu" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,0,0,20"/>
                
                <Grid x:Name="GameGrid"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      BackgroundColor="LightGray"
                      Padding="5">
                </Grid>
                
                <!-- Section pour la carte courante -->
                <Frame x:Name="CurrentCardFrame"
                       IsVisible="False"
                       Margin="0,20,0,0"
                       Padding="10"
                       HorizontalOptions="Center">
                    <StackLayout>
                        <Label Text="Carte courante"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Frame x:Name="CurrentCardBorder"
                               WidthRequest="100"
                               HeightRequest="130"
                               Padding="0"
                               CornerRadius="10">
                            <Label x:Name="CurrentCardNumber"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </StackLayout>
                </Frame>
                
                <Label x:Name="DebugLabel" 
                       Text="" 
                       FontSize="12" 
                       TextColor="Gray"
                       HorizontalTextAlignment="Center" 
                       Margin="0,20,0,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 