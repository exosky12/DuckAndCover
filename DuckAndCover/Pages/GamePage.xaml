<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCover.Pages.GamePage"
             Title="Game">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <!-- En-tÃªte avec informations du joueur -->
                <Label x:Name="GridInfoLabel" 
                       Text="Grille de jeu" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,0,0,10"/>
                
                <!-- Instructions pour le joueur -->
                <Label x:Name="InstructionsLabel"
                       Text="En attente..."
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       TextColor="Blue"
                       FontAttributes="Italic"
                       Margin="0,0,0,20"/>
                
                <!-- Section pour la carte courante -->
                <Frame x:Name="CurrentCardFrame"
                       IsVisible="False"
                       Margin="0,0,0,20"
                       Padding="10"
                       HorizontalOptions="Center"
                       BackgroundColor="LightBlue">
                    <StackLayout>
                        <Label Text="Carte courante"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Frame x:Name="CurrentCardBorder"
                               WidthRequest="100"
                               HeightRequest="130"
                               Padding="0"
                               CornerRadius="10">
                            <Label x:Name="CurrentCardNumber"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </StackLayout>
                </Frame>
                
                <!-- Boutons d'actions -->
                <StackLayout Orientation="Horizontal" 
                            HorizontalOptions="Center" 
                            Spacing="10" 
                            Margin="0,0,0,20">
                    <Button x:Name="CoverButton"
                            Text="Cover"
                            BackgroundColor="Orange"
                            TextColor="White"
                            WidthRequest="80"
                            Clicked="OnCoverClicked"/>
                    
                    <Button x:Name="DuckButton"
                            Text="Duck"
                            BackgroundColor="Blue"
                            TextColor="White"
                            WidthRequest="80"
                            Clicked="OnDuckClicked"/>
                    
                    <Button x:Name="CoinButton"
                            Text="Passer"
                            BackgroundColor="Gray"
                            TextColor="White"
                            WidthRequest="80"
                            Clicked="OnCoinClicked"/>
                </StackLayout>
                
                <!-- Grille de jeu -->
                <Grid x:Name="GameGrid"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      BackgroundColor="LightGray"
                      Padding="5">
                </Grid>
                
                <!-- Boutons d'information -->
                <StackLayout Orientation="Horizontal" 
                            HorizontalOptions="Center" 
                            Spacing="10" 
                            Margin="0,20,0,0">
                    <Button Text="Voir grilles"
                            BackgroundColor="Green"
                            TextColor="White"
                            WidthRequest="100"
                            Clicked="OnShowGridsClicked"/>
                    
                    <Button Text="Voir scores"
                            BackgroundColor="Purple"
                            TextColor="White"
                            WidthRequest="100"
                            Clicked="OnShowScoresClicked"/>
                    
                    <Button Text="Quitter"
                            BackgroundColor="Red"
                            TextColor="White"
                            WidthRequest="100"
                            Clicked="OnQuitClicked"/>
                </StackLayout>
                
                <!-- Debug -->
                <Label x:Name="DebugLabel" 
                       Text="" 
                       FontSize="12" 
                       TextColor="Gray"
                       HorizontalTextAlignment="Center" 
                       Margin="0,20,0,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>