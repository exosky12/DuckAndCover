<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

        <Color x:Key="PrimaryColor">#463F3A</Color>
        <Color x:Key="ForegroundColor">white</Color>
        <Color x:Key="AccentColor">#FFF1C26F</Color>
        <Color x:Key="GradientStart">#FBAB7E</Color>
        <Color x:Key="GradientEnd">#F7CE68</Color>

        <Style x:Key="LabelRegle"
               TargetType="Label">
                <Setter Property="FontFamily"
                        Value="KalamRegular"/>
                <Setter Property="LineHeight"
                        Value="1.3"/>
                <Setter Property="FontSize"
                        Value="16"/>
                <Setter Property="TextColor"
                        Value="Black"/>
        </Style>
        <Style x:Key="LabelJeu"
               TargetType="Label">
                <Setter Property="FontFamily"
                        Value="Clash"/>
                <Setter Property="LineHeight"
                        Value="1.3"/>
                <Setter Property="FontSize"
                        Value="26"/>
                <Setter Property="TextColor"
                        Value="Black"/>
        </Style>


</ResourceDictionary>