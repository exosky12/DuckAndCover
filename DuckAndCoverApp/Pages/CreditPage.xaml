<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCoverApp.CreditPage"
             BackgroundColor="{StaticResource PrimaryColor}">

       <Grid>
              <Grid.Background>
                     <LinearGradientBrush StartPoint="0,0"
                                          EndPoint="1,1">
                            <GradientStop Color="{StaticResource GradientStart}"
                                          Offset="0.1"/>
                            <GradientStop Color="{StaticResource GradientEnd}"
                                          Offset="0.9"/>
                     </LinearGradientBrush>
              </Grid.Background>

              <ScrollView>
                     <VerticalStackLayout Spacing="25"
                                          Padding="30"
                                          VerticalOptions="Center">

                            <Label Text="Crédits"
                                   FontSize="42"
                                   TextColor="{StaticResource ForegroundColor}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="0,0,0,20"/>

                            <BoxView HeightRequest="3"
                                     WidthRequest="120"
                                     Color="White"
                                     HorizontalOptions="Center"
                                     Margin="0,5"/>

                            <Label Text="Développé avec passion par :"
                                   FontSize="22"
                                   TextColor="White"
                                   FontAttributes="Italic"
                                   HorizontalOptions="Center"/>

                            <Grid ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="20"
                                  ColumnSpacing="20">

                                   <Border Grid.Row="0"
                                           Grid.Column="0"
                                           Stroke="{StaticResource ForegroundColor}"
                                           StrokeThickness="2"
                                           BackgroundColor="Transparent"
                                           StrokeDashArray="4,2"
                                           Padding="20"
                                           StrokeShape="RoundRectangle 25">
                                          <HorizontalStackLayout Spacing="15"
                                                                 VerticalOptions="Center"
                                                                 HorizontalOptions="Center">
                                                 <Label Text="🎭"
                                                        FontSize="32"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Center"/>
                                                 <VerticalStackLayout Spacing="5"
                                                                      VerticalOptions="Center">
                                                        <Label Text="Merienne Jules"
                                                               FontSize="20"
                                                               TextColor="{StaticResource ForegroundColor}"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                 </VerticalStackLayout>
                                          </HorizontalStackLayout>
                                   </Border>

                                   <Border Grid.Row="0"
                                           Grid.Column="1"
                                           Stroke="{StaticResource ForegroundColor}"
                                           StrokeThickness="2"
                                           BackgroundColor="Transparent"
                                           StrokeDashArray="4,2"
                                           Padding="20"
                                           StrokeShape="RoundRectangle 25">
                                          <HorizontalStackLayout Spacing="15"
                                                                 VerticalOptions="Center"
                                                                 HorizontalOptions="Center">
                                                 <Label Text="💡"
                                                        FontSize="32"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Center"/>
                                                 <VerticalStackLayout Spacing="5"
                                                                      VerticalOptions="Center">
                                                        <Label Text="Barrère Jordy"
                                                               FontSize="20"
                                                               TextColor="{StaticResource ForegroundColor}"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                 </VerticalStackLayout>
                                          </HorizontalStackLayout>
                                   </Border>

                                   <Border Grid.Row="1"
                                           Grid.Column="0"
                                           Stroke="{StaticResource ForegroundColor}"
                                           StrokeThickness="2"
                                           BackgroundColor="Transparent"
                                           StrokeDashArray="4,2"
                                           Padding="20"
                                           StrokeShape="RoundRectangle 25">
                                          <HorizontalStackLayout Spacing="15"
                                                                 VerticalOptions="Center"
                                                                 HorizontalOptions="Center">
                                                 <Label Text="⚡"
                                                        FontSize="32"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Center"/>
                                                 <VerticalStackLayout Spacing="5"
                                                                      VerticalOptions="Center">
                                                        <Label Text="Barrès Julien"
                                                               FontSize="20"
                                                               TextColor="{StaticResource ForegroundColor}"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                 </VerticalStackLayout>
                                          </HorizontalStackLayout>
                                   </Border>

                                   <Border Grid.Row="1"
                                           Grid.Column="1"
                                           Stroke="{StaticResource ForegroundColor}"
                                           StrokeThickness="2"
                                           BackgroundColor="Transparent"
                                           StrokeDashArray="4,2"
                                           Padding="20"
                                           StrokeShape="RoundRectangle 25">
                                          <HorizontalStackLayout Spacing="15"
                                                                 VerticalOptions="Center"
                                                                 HorizontalOptions="Center">
                                                 <Label Text="🛠️"
                                                        FontSize="32"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Center"/>
                                                 <VerticalStackLayout Spacing="5"
                                                                      VerticalOptions="Center">
                                                        <Label Text="Ory Florentin"
                                                               FontSize="20"
                                                               TextColor="{StaticResource ForegroundColor}"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                 </VerticalStackLayout>
                                          </HorizontalStackLayout>
                                   </Border>
                            </Grid>

                            <Label Text="© 2025 - Tous droits réservés"
                                   FontSize="14"
                                   TextColor="{StaticResource ForegroundColor}"
                                   Opacity="0.7"
                                   HorizontalOptions="Center"
                                   Margin="0,20,0,0"/>
                     </VerticalStackLayout>
              </ScrollView>
       </Grid>
</ContentPage>