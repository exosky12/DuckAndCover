<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCoverApp.GameMenuPage">
    <Grid Padding="100">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource GradientStart}" Offset="0.1" />
                <GradientStop Color="{StaticResource GradientEnd}" Offset="0.9" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView Padding="20">
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Style="{StaticResource labelJeu}"
                       Text="Nombre de joueurs choisis."
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />

                <Frame BackgroundColor="White"
                       BorderColor="Black"
                       HeightRequest="50"
                       WidthRequest="300"
                       CornerRadius="15"

                       HasShadow="False">
                    <Label Text="1"
                           FontSize="18" />
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>