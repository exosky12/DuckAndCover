<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCoverApp.Regles"
             Title="Regles"
             BackgroundColor="White">

    <ScrollView Padding="20">

        <VerticalStackLayout
            Spacing="30"
            HorizontalOptions="Center"
            VerticalOptions="Fill">
            <Label 
                Text="Regles :"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Image
            Source="titre.png"
            HeightRequest="185"
            Aspect="AspectFit"
            HorizontalOptions="Center"/>

            <BoxView HeightRequest="1"  />
            <Frame BackgroundColor="LightCoral"
                   WidthRequest="400"
               CornerRadius="15"
               Padding="30"
               HasShadow="True"
               HorizontalOptions="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label
                    Text="On tire une carte du deck sur le côté, selon le nombre chaque joueur peut soit bouger (vers un trou dans la grille ou sur les bords tant qu'il y a une carte sur un coté) sa carte qui contient le chiffre soit recouvrir une carte adjacente (pour réduire les tâches)."
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Row="0" Grid.Column="0"
                />
                    <Label
                        Text="Si quelqu’un n’as plus la carte tiré il doit dire “coin” et ne joue pas.
                        Si les 3 joueurs ne peuvent pas jouer la cartes est mise sur le coté"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Grid.Row="2" Grid.Column="0"
/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>