<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCoverApp.MainPage"
             BackgroundColor="White">

    <ScrollView Padding="20">
        <VerticalStackLayout
            Spacing="30"
            HorizontalOptions="Center"
            VerticalOptions="Fill">

            <Image
                Source="titre.png"
                HeightRequest="185"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="30"
                   HasShadow="True"
                   HorizontalOptions="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button
                        x:Name="PlayBtn"
                        Text="Play"
                        WidthRequest="230"
                        HeightRequest="50"
                        CornerRadius="25"
                        Margin="10"
                        BackgroundColor="DarkCyan"
                        TextColor="White"
                        FontSize="18"
                        Grid.Row="0" Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        
                    />

                    <Button
                        x:Name="RulesBtn"
                        Text="Règles du jeu"
                        WidthRequest="230"
                        BorderColor="Black"
                        BorderWidth="1"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="White"
                        TextColor="Black"
                        Margin="10"
                        FontSize="18"
                        Grid.Row="1" Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        
                        />      
                    <Button
                        x:Name="CreditsBtn"
                        Text="Crédits"
                        WidthRequest="230"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="White"
                        TextColor="Black"
                        BorderColor="Black"
                        BorderWidth="1"
                        FontSize="18"
                        Margin="10"
                        Grid.Row="2" Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="CreditsBtn_Clicked"
					/>
                    
                    
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
