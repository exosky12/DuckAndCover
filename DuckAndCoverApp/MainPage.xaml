<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckAndCoverApp.MainPage"
             BackgroundColor="White">

    <ScrollView Padding="20">
        <VerticalStackLayout
            Spacing="30"
            HorizontalOptions="Center"
            VerticalOptions="Fill">

            <!-- Titre avec image -->
            <Image
                Source="titre.png"
                HeightRequest="185"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <!-- Espace vide pour pousser les éléments vers le bas -->
            <BoxView HeightRequest="1"  />

            <!-- Frame pour arrondir les coins et ajouter l'ombre -->
            <Frame BackgroundColor="LightGray"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True"
                   HorizontalOptions="Center">
                <!-- Grid pour les boutons -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bouton Play -->
                    <Button
                        x:Name="CounterBtn2"
                        Text="Play"
                        WidthRequest="150"
                        HeightRequest="50"
                        CornerRadius="25"
                        Margin="20"
                        BackgroundColor="RoyalBlue"
                        TextColor="White"
                        FontSize="18"
                        Grid.Row="0" Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>

                    <!-- Bouton Crédits -->
                    <Button
                        x:Name="CounterBtn"
                        Text="Crédits"
                        WidthRequest="150"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="RoyalBlue"
                        TextColor="White"
                        FontSize="18"
                        Grid.Row="1" Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
